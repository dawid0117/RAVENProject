@model Room


@{
    ViewData["Title"] = "Dodaj Pokój";


    <form asp-action="AddRoom" asp-controller="Room" method="post">
        <h2 class="mb-4">Dodaj pokój do hotelu</h2>
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">Nazwa</span>
            <input asp-for="Name" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>

        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">Powierzchnia</span>
            <input asp-for="Space" type="number" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">Liczba osób</span>
            <input asp-for="People" type="number" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
        </div>
         <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">Opis</span>
            <input asp-for="Description" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
        </div>
        <select class="form-select mb-3" aria-label="Default select example" asp-for="HotelId">
            <option selected>Wybierz hotel</option>
            @foreach (var hotel in ViewBag.Hotels)
            {
                <option value="@hotel.Id">@hotel.Name</option>
            }
        </select>
        <button type="submit" class="btn btn-secondary ">Dodaj</button>
    </form>

}
