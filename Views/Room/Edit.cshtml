@model Room

@{
    ViewData["Title"] = "Aktualizuj pokój";

    <form asp-action="EditRoom" asp-route-id="@Model.Id" method="post">
            <h2 class="mb-4">Aktualizacja pokoju o nazwie <i>@Model.Name</i></h2>
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Nazwa</span>
                <input asp-for="Name" type="text" value="@Model.Name" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">

            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Powierzchnia</span>
                <input asp-for="Space" type="number" value="@Model.Space" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Liczba osób</span>
                <input asp-for="People" type="number" value="@Model.People" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
             <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Opis</span>
            <input asp-for="Description" type="text" value="@Model.Description" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>  
            <button type="submit" class="btn btn-secondary">Aktualizuj</button>
    </form>
}
